#! /usr/bin/php
<?php

if (!isset($_SERVER['argv'][1]))
{
  echo "Usage: misago {$app_name}";
  exit;
}

$path_to   = $_SERVER['argv'][1];
$path_here = dirname(__FILE__);

`cp -r {$path_here}/../templates/app {$path_to}`;

`mkdir -p {$path_to}/lib`;
`ln -sf {$path_here}/.. {$path_to}/lib/misago`;

`mkdir -p {$path_to}/app/views/layouts`;
`mkdir -p {$path_to}/app/models`;
`mkdir -p {$path_to}/db`;
`mkdir -p {$path_to}/doc`;
`mkdir -p {$path_to}/log`;
`mkdir -p {$path_to}/test/unit`;
`mkdir -p {$path_to}/test/functional`;
`mkdir -p {$path_to}/test/fixtures`;
`mkdir -p {$path_to}/tmp/cache/lighttpd/compress`;
`mkdir -p {$path_to}/vendor`;

`sed -i 's/\#{appname}/$path_to/g' {$path_to}/config/database.yml`;

?>
